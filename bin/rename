#!/usr/bin/env ruby
# -*- ruby -*-
# Author: William (B.J.) Snow Orvis
#
# == Synopsis
# Renames all files specified by matching a regular expression
# to their name.
#
# == Usage
# rename [-p|--pretend] matchexpr [files ...]
#
# -p --pretend:
#     Print how the file names would change rather than actually doing it.
# -h --help:
#     This help

require 'getoptlong'

def usage
  require 'rdoc/usage'
  RDoc::usage('Synopsis','Usage')
end


opts = GetoptLong.new(
  [ '--help', '-h', GetoptLong::NO_ARGUMENT ]
)

opts.each do |opt, arg|
  case opt
  when '--help'
    usage
  end
end

usage
